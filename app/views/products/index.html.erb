<hr/>

<div class="row" id="productCard">
  <div class="card-columns">
    <% @products.each do |product| %>
    <div class="card">
      <div class="card-header">
        <%= product.store.name %>
      </div>
      <%= image_tag product.image.thumb, class:"card-img-top" %>
      <div class="card-body">
        <h6><%= product.name %></h5>
        <spen><%= link_to 'detail', product, class: "btn btn-sm" %></spen>
      </div>
      <div class="card-footer">
        <strong><%= product.price %> won</strong>
      </div>
    </div>
    <% end %>
  </div>
</div>

