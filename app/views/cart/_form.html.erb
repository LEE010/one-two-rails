<div class="modal-header">
  <h5 class="modal-title" id="itemEditModalLable">itemEdit</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
        
<div class="modal-body">
  <div class="input-group input-group-sm">
    <form action="/cart" method="post">
      <input type="hidden" name="_method" value="put"/>
      <input name="delete_id" type="hidden" value="<%= @option.id %>">
      <input name="product_id" type="hidden" value="<%= @product.id %>">
        <div class="form-row">
          <div class="col">
            <% if @options1.count > 1 %>
            <label for="option1">option1</label>
            <select class="custom-select" name="option1">
              <% @options1.each do |o| %>
                <option value="<%= o.option1 %>"><%= o.option1 %></option>
              <% end %>
            </select>
            <% end %>
          </div>
          
          <div class="col">
            <% if @options2.count > 1 %>
            <label for="option2">option2</label>
            <select class="custom-select" name="option2">
              <% @options2.each do |o| %>
                <option value="<%= o.option2 %>"><%= o.option2 %></option>
              <% end %>
            </select>
            <% end %>
          </div>
          
          <div class="col">
            <label for="quantity">quantity</label>
            <input type="text" class="form-control" name="quantity" placeholder ="quantity">
          </div>
          
          <input class="btn btn-primary" type="submit" >
        </div>
    </form>
  
  </div>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <button type="button" class="btn btn-primary">Save changes</button>
  
</div>

