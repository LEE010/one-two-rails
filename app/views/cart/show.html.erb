<h1>My Cart</h1>
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>option1</th>
      <th>option2</th>
      <th>quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% session[:cart].each do |option_id, quantity| %>
      <tr>
        <% option = Option.find(option_id) %>
        <td><%= image_tag option.product.image.thumb %></td>
        <td><%= option.product.name %></td>
        <td><%= option.product.price %>Ïõê</td>
        <td><%= option.option1 %></td>
        <td><%= option.option2 %></td>
        <td><%= quantity %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>